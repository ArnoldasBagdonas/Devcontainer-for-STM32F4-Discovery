{
    "env": {
        "DEBUG_LAUNCH_COMMAND": "${command:cmake.launchTargetPath}",
        "DEBUG_ADAPTER": "cortex-debug",
        "DEBUG_TARGET_NAME": "${command:cmake.launchTargetPath}",
        "DEBUG_SERVER": "native",
        "DEBUG_SERVER_PORT": "3333",
        "DEBUG_GDB_PATH": "arm-none-eabi-gdb",
        "DEBUG_GDB_INIT": "", //  specifies the path to a .gdbinit file, which can contain additional GDB commands to be executed when the debugger starts up
        "DEBUG_GDB_INIT_COMMANDS": [
            "set exec-file ${command:cmake.launchTargetPath}",
            "set remotetimeout 240",
            "target remote localhost:3333",
            "monitor reset",
            "set mem inaccessible-by-default off",
            "set {int}0x20000000 = 0x0",
            "set {int}0x20000000 = 0xDEADBEEF",
            "load",
            "break main",
            "run"
        ]
    }
}
